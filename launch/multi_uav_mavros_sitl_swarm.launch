<?xml version="1.0"?>
<launch>
    <!-- MAVROS posix SITL environment launch script -->
    <!-- launches Gazebo environment and 2x: MAVROS, PX4 SITL, and spawns vehicle -->
    <!-- vehicle model and world -->
    <arg name="est" default="ekf2"/>
    <arg name="vehicle" default="iris"/>
    <arg name="world" default="$(find mavlink_sitl_gazebo)/worlds/empty.world"/>
    <!-- gazebo configs -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <!-- Gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
    </include>
    <!-- UAV1 -->
    <group ns="uav1">
        <!-- MAVROS and vehicle configs -->        
        <arg name="ID" value="1"/>
		<arg name="udp_offboard_port_remote" value="14540" />	
		<arg name="udp_offboard_port_local"  value="14557" />
        <arg name="fcu_url" default="udp://:14540@localhost:14557"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn_swarm.launch">
            <arg name="x" value="0"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14561"/>
            <arg name="ID" value="$(arg ID)"/>
			<arg name="udp_offboard_port_remote" default="$(arg udp_offboard_port_remote)" />
			<arg name="udp_offboard_port_local"  default="$(arg udp_offboard_port_local)" />				
        </include>
	<!-- Control Node -->
	<node name="offboard_node" pkg="offboard_node" type="main" output="screen"/>		
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="$(arg ID)"/>
            <arg name="tgt_component" value="1"/>			
        </include>
    </group>
    <!-- UAV2 -->
    <group ns="uav2">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="2"/>
		<arg name="udp_offboard_port_remote" value="14541" />	
		<arg name="udp_offboard_port_local"  value="14558" />		
        <arg name="fcu_url" default="udp://:14541@localhost:14558"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn_swarm.launch">
            <arg name="x" value="1"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14562"/>
            <arg name="ID" value="$(arg ID)"/>
			<arg name="udp_offboard_port_remote" default="$(arg udp_offboard_port_remote)" />
			<arg name="udp_offboard_port_local"  default="$(arg udp_offboard_port_local)" />				
        </include>
	<!-- Control Node -->
	<node name="offboard_node" pkg="offboard_node" type="main" output="screen"/>		
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="$(arg ID)"/>
            <arg name="tgt_component" value="1"/>
        </include>
    </group>
    <!-- UAV3 -->
    <group ns="uav3">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="3"/>
		<arg name="udp_offboard_port_remote" value="14542" />	
		<arg name="udp_offboard_port_local"  value="14559" />		
        <arg name="fcu_url" default="udp://:14542@localhost:14559"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn_swarm.launch">
            <arg name="x" value="0"/>
            <arg name="y" value="1"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14563"/>
            <arg name="ID" value="$(arg ID)"/>
			<arg name="udp_offboard_port_remote" default="$(arg udp_offboard_port_remote)" />
			<arg name="udp_offboard_port_local"  default="$(arg udp_offboard_port_local)" />				
        </include>
	<!-- Control Node -->
	<node name="offboard_node" pkg="offboard_node" type="main" output="screen"/>		
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="$(arg ID)"/>
            <arg name="tgt_component" value="1"/>
        </include>
    </group>
    <!-- UAV4 -->
    <group ns="uav4">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="4"/>
		<arg name="udp_offboard_port_remote" value="14543" />	
		<arg name="udp_offboard_port_local"  value="14560" />		
        <arg name="fcu_url" default="udp://:14543@localhost:14560"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn_swarm.launch">
            <arg name="x" value="1"/>
            <arg name="y" value="1"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14564"/>
            <arg name="ID" value="$(arg ID)"/>
			<arg name="udp_offboard_port_remote" default="$(arg udp_offboard_port_remote)" />
			<arg name="udp_offboard_port_local"  default="$(arg udp_offboard_port_local)" />				
        </include>
	<!-- Control Node -->
	<node name="offboard_node" pkg="offboard_node" type="main" output="screen"/>		
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="$(arg ID)"/>
            <arg name="tgt_component" value="1"/>
        </include>
    </group>		
</launch>

